<h2>Facebookにログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="field">
      <%= f.text_field :email, placeholder:"メールアドレス" %>
    </div>
    
    <div class="field">
      <%= f.password_field :password, placeholder:"パスワード" %>
    </div>
    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-large btn-primary" %>
    </div>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
